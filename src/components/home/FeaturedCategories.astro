---


const categories = [
  {
    id: 1,
    title: "Điện thoại & Tablet",
    description: "Thiết bị thông minh, kết nối cuộc sống",
    image: "https://images.pexels.com/photos/47261/pexels-photo-47261.jpeg",
    link: "/san-pham/dien-thoai"
  },
  {
    id: 2,
    title: "Thời trang nam nữ",
    description: "Xu hướng mới nhất cho phong cách của bạn",
    image: "https://images.pexels.com/photos/934070/pexels-photo-934070.jpeg",
    link: "/san-pham/thoi-trang"
  },
  {
    id: 3,
    title: "Đồ gia dụng",
    description: "Sản phẩm tiện ích cho tổ ấm của bạn",
    image: "https://images.pexels.com/photos/4050318/pexels-photo-4050318.jpeg",
    link: "/san-pham/do-gia-dung"
  }
];
---

<section class="py-16 bg-neutral/5">
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-neutral mb-4">Danh mục nổi bật</h2>
      <p class="text-neutral/70 max-w-2xl mx-auto">
        Khám phá các danh mục sản phẩm được ưa chuộng nhất tại BigS
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {categories.map((category) => (
        <a 
          href={category.link}
          class="group"
        >
          <Card variant="elevated" padding="none" class="overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <div class="relative h-64 overflow-hidden">
              <img 
                src={category.image} 
                alt={category.title} 
                class="w-full h-full object-cover object-center transition-transform duration-500 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-neutral/80 to-transparent flex items-end">
                <div class="p-6">
                  <h3 class="text-xl font-bold text-white mb-1">{category.title}</h3>
                  <p class="text-white/80 text-sm">{category.description}</p>
                </div>
              </div>
            </div>
            <div class="py-4 px-6 text-right">
              <span class="text-primary font-medium inline-flex items-center group-hover:text-primary/80">
                Xem thêm
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </span>
            </div>
          </Card>
        </a>
      ))}
    </div>
  </div>
</section>