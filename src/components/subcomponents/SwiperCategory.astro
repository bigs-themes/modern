---
import ProductElement from '../product/ProductElement.astro';
interface Props {
    products: any[];
}

const { products }: Props = Astro.props;


---

<div class="swiper swiper_category_related ">
    <div class="swiper-wrapper">
        {
            products.map((product: any) => (
            <div class="swiper-slide">
                <ProductElement product={product}></ProductElement>
            </div>
            ))
        }
    </div>
    <div class="swiper-button-prev swiper-button-prev-related"></div>
    <div class="swiper-button-next swiper-button-next-related"></div>
    <div class="swiper-pagination swiper-pagination-related"></div>

</div>

<style>
    .swiper {
      width: 100%;
    }

    .swiper-slide {
      background-position: center;
      background-size: cover;
      width: 25% !important;
      /* max-width: 250px; */
      /* height: 500px; */
      margin: 30px;
    }

    .swiper-button-next, .swiper-button-prev {
      z-index: 10;
      display: block;
    }
    .swiper-button-prev-related,
    .swiper-button-next-related {
      height: 48px;
      width: 48px;
      border-radius: 999px;
      color: #B0B3B8;
      background-color: #3B3C3E;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      padding: 16px;
    }
    .swiper-button-prev-related::after,
    .swiper-button-next-related::after {
      font-size: 20px;
      font-weight: 700;
      text-align: center;
    }
    .swiper-button-prev.swiper-button-disabled, 
    .swiper-button-next.swiper-button-disabled {
      pointer-events: auto !important;
    }
    .swiper-pagination-related .swiper-pagination-bullet-active {
      background: #0284c7 !important;
    }

    .swiper_category_related .swiper-slide:nth-child(1) {
      margin-left: 0 !important;
    }
    
    @media (max-width: 768px) {
      .swiper-slide {
        width: 50% !important;
      }
    }

</style>
<script src="./SwiperCategory.js"></script>
